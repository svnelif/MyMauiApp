<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:MyMauiApp.Views"
    x:Class="MyMauiApp.AppShell"
    FlyoutBehavior="Flyout"
    Shell.FlyoutWidth="220">

    <!--  Uygulama Başlığı -->
    <Shell.FlyoutHeader>
        <Grid BackgroundColor="#F5F7FB" Padding="20,40,0,20">
            <Label Text="Calculator"
                   FontSize="26"
                   FontAttributes="Bold"
                   TextColor="#E48ADF"
                   HorizontalOptions="Center"/>
        </Grid>
    </Shell.FlyoutHeader>

    <!--  Flyout menü satırı şablonu  -->
    <Shell.ItemTemplate>
        <DataTemplate>
            <Grid Padding="18,12">
                <Label Text="{Binding Title}"
                       FontSize="18"
                       FontAttributes="Bold"
                       TextColor="#FF222122"
                       VerticalOptions="Center"/>
            </Grid>
        </DataTemplate>
    </Shell.ItemTemplate>

    <!--  Menü öğeleri -->
    <FlyoutItem Title="Standard" Route="StandardCalculatorPage">
        <ShellContent Title="Standard"
                      ContentTemplate="{DataTemplate views:StandardCalculatorPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Scientific" Route="ScientificCalculatorPage">
        <ShellContent Title="Scientific"
                      ContentTemplate="{DataTemplate views:ScientificCalculatorPage}" />
    </FlyoutItem>

</Shell>
